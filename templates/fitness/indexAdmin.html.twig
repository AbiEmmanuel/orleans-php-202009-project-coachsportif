{% extends 'base.html.twig' %}

{% block title %}Fitness index{% endblock %}

{% block body %}
    <h1>Fitness index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Fitness_Text</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for description in descriptions %}
            <tr>
                <td>{{ description.id }}</td>
                <td>{{ description.fitnessText }}</td>
                <td>
                    <a href="{{ path('fitness_show', {'id': description.id}) }}">show</a>
                    <a href="{{ path('fitness_edit', {'id': description.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('fitness_new') }}">Create new</a>
{% endblock %}
