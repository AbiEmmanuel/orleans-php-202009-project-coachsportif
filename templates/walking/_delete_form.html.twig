<form method="post" action="{{ path('walking_delete', {'id': walking.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette élément?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ walking.id) }}">
    <button class="btn btn-dark">Supprimer</button>
</form>
