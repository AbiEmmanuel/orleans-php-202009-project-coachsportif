{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{ encore_entry_link_tags('walking') }}
{% endblock %}

{% block body %}

    <section class="carouselTop">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item d-flex justify-content-center active">
                    <h1 class="textTitle text-light">Qu'est-ce que la marche nordique ?</h1>
                    <img class="imageCarousel vh-100 w-100" src="{{ asset('build/images/nordic_walking_place_holder_1.jpg') }}"
                         alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="imageCarousel vh-100 w-100" src="{{ asset('build/images/nordic_walking_place_holder_2.jpg') }}"
                         alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="imageCarousel vh-100 w-100" src="{{ asset('build/images/nordic_walking_place_holder_3.jpg') }}"
                         alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </section>

    <section class="nordic-walking">
        <div class="walkingOverlay">
            <div class="container">
                {% for walk in walks %}
                    <div class="row justify-content-between">
                        <div class="col-lg-5">
                            <img src="{{ asset( walk.picture ) }}">
                        </div>
                        <p class="col-lg-5">{{ walk.description }}</p>
                    </div>
                {% endfor %}
            </div>
            <div class="walk-submit">
                <p>Si vous êtes intéressé, il suffit de remmplir un formulaire en ligne, simple et rapide !</p>
                <a href="#" class="btn btn-primary">S'inscrire</a>
            </div>
        </div>
    </section>
{% endblock %}
