{% extends 'base.html.twig' %}

{% block title %}Regulation index{% endblock %}

{% block body %}
    <h1>Regulation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for regulation in regulations %}
            <tr>
                <td>{{ regulation.id }}</td>
                <td>{{ regulation.description }}</td>
                <td>
                    <a href="{{ path('regulation_show', {'id': regulation.id}) }}">show</a>
                    <a href="{{ path('regulation_edit', {'id': regulation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('regulation_new') }}">Create new</a>
{% endblock %}
