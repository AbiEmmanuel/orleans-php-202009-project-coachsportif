{% extends 'layout.html.twig' %}

    {% block stylesheets %}
        {{ encore_entry_link_tags('home') }}
    {% endblock %}

{% block title %}Home{% endblock %}

{% block body %}

    <section class="carouselTop">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item d-flex justify-content-center active">
                    <h1 class="textTitle text-light">Damien Gouveia Coach Sportif</h1>
                    <img class="imageCarousel vh-100 w-100" src="{{ asset('build/images/fondSectionSport.jpg') }}"
                         alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="imageCarousel vh-100 w-100" src="{{ asset('build/images/overlay.jpg') }}"
                         alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="imageCarousel vh-100 w-100" src="{{ asset('build/images/sportAdapte.jpg') }}"
                         alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </section>

    <section class="textIntro">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-lg-2 ">
                    <img class="portrait" src="{{ asset('build/images/DamienG.jpg') }}" alt="Auto portrait"
                         title="Damien Gouveia">
                </div>
                <div class="homeTextPresentation col-lg-6 align-items-center">
                    {% for text in home %}
                        <p class="homeText">{{ text.text }}</p>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>

    <section class="serviceSport">
            <h2>Nos services</h2>
                <div class="container-fluid ">
                    <div class="bikes row pb-5 d-flex justify-content-center">

                        <div class="col-sm-6 col-md-6 col-lg-5 d-sm-block">
                            <a href="#">
                                <div class="linkCategory card text-white card-inverse">
                                    <img src="{{ asset('build/images/sportAdapte.jpg') }}" class="fitness card-img" alt="">
                                    <div class="card-img-overlay d-flex">
                                        <h2 class="card-title text-truncate align-self-center mx-auto">Activité adaptée</h2>
                                    </div>
                                </div>
                            </a>
                        </div>

                        <div class="col-sm-6 col-md-6 col-lg-5 d-sm-block">
                            <a href="{{ path('fitness') }}">
                                <div class="linkCategory card text-white card-inverse">
                                    <img src="{{ asset('build/images/remiseEnForme.jpg') }}" class="fitness card-img" alt="">
                                    <div class="card-img-overlay d-flex">
                                        <h2 class="card-title text-truncate align-self-center mx-auto">Remise en forme</h2>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
    </section>

{% endblock %}
