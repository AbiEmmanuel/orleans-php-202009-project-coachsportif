{% extends 'layout_admin.html.twig' %}

{% block title %}Comptes clients{% endblock %}

{% block body %}
    <h1 class="mt-4 text-center">Administration comptes clients</h1>
    <section class="container">
        <table class="table text-dark">
            <thead class="thead-light text-center">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nom</th>
                <th scope="col">Prénom</th>
                <th scope="col">Age</th>
                <th scope="col">Email</th>
                <th scope="col">Action</th>
            </tr>
            </thead>
            <tbody>
            {% for customer in customers %}
                <tr>
                    <th scope="row">{{ customer.id }}</th>
                    <td>{{ customer.lastname }}</td>
                    <td>{{ customer.firstname }}</td>
                    <td>{{ customer.age }}</td>
                    <td>{{ customer.email }}</td>
                    <td class="text-center">
                        <a class="btn btn-warning mb-sm-2 mb-2" href="{{ path('profile_user', {id: customer.id}) }}">Afficher</a>
                        <a class="btn btn-primary mb-sm-2 mb-2" href="{{ path('profile_edit', {id: customer.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td class="text-danger" colspan="8">Aucun résultat trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="row justify-content-center mt-3">
            <a class="btn btn-secondary" href="{{ path('admin_index') }}">Retour à la page d'accueil</a>
        </div>

    </section>
{% endblock %}
