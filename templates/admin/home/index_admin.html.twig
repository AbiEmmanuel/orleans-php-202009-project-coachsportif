{% extends 'layout_admin.html.twig' %}
   {% block stylesheets %}
       {{ encore_entry_link_tags('indexAdmin') }}
   {% endblock %}
{% block title %}Administration|Présentation{% endblock %}

{% block body %}
    <h1 class="title text-center text-dark mt-4">Administration du texte de présentation</h1>
        <div class="container">
            <a class="btn btn-success btn mb-2" href="{{ path('home_new') }}">Ajouter une présentation</a>
            <table class="table text-dark text-center">
                <thead class="thead-light">
                    <tr>
                        <th>Nom de l'image</th>
                        <th>Texte de Présentation</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for presentation in presentations %}
                        <tr>
                            <td>
                                <img class="idImage" src="{{ asset('uploads/home/' ~ presentation.picture) }}"
                                     alt="{{ presentation.picture }}" title="{{ presentation.picture }}">
                            </td>
                            <td>{{ presentation.text| raw }}</td>
                            <td>
                                <a class="col btn btn-primary btn mb-sm-2 mb-2"
                                   href="{{ path('home_edit', {'id': presentation.id}) }}">Modifier</a>
                                {{ include('admin/home/_delete_form.html.twig') }}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td class="text-danger" colspan="8">Aucun résultat trouvé</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="text-center">
            <a class="btn btn-secondary btn" href="{{ path('admin_index') }}">Retour</a>
        </div>
{% endblock %}
