{% extends 'base.html.twig' %}

{% block title %}CGV index{% endblock %}

{% block body %}
    <h1>CGV index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Document</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for c_g_v in c_g_vs %}
            <tr>
                <td>{{ c_g_v.id }}</td>
                <td>{{ c_g_v.document }}</td>
                <td>
                    <a href="{{ path('c_g_v_show', {'id': c_g_v.id}) }}">show</a>
                    <a href="{{ path('c_g_v_edit', {'id': c_g_v.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('c_g_v_new') }}">Create new</a>
{% endblock %}
