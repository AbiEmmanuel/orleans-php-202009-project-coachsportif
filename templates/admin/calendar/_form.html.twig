<div class="container">
{{ form_start(form) }}
    <div>
        {{ form_row(form.title) }}
    </div>
    <div class="row justify-content-around">
        <div class="col-6">
            {{ form_row(form.start) }}
        </div>
        <div class="col-6">
            {{ form_row(form.end) }}
        </div>
    </div>
    <div>
        {{ form_row(form.description) }}
    </div>
    {{ form_widget(form) }}
    <div class="text-center">
        <button class="btn btn-primary btn m-3">{{ button_label|default('Enregistrer') }}</button>
    </div>
{{ form_end(form) }}
</div>
